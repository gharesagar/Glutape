<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckInDealerActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_margin="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_spinner_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDistributer"
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="4.5"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:paddingStart="2dp"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:text="Select Distributer"/>

        <ImageView
            android:id="@+id/imgDrop1"
            android:background="@drawable/simple_spinner_background"
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_drop_arrow"
            android:layout_margin="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_spinner_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDealer"
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="4.5"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:paddingStart="2dp"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:text="Select Dealer"/>

        <ImageView
            android:id="@+id/imgDrop2"
            android:background="@drawable/simple_spinner_background"
            android:layout_width="0dp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_drop_arrow"
            android:layout_margin="3dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btCheckInDealer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckIn"
        android:layout_margin="16sp"/>

</LinearLayout>